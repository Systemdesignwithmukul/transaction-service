<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="Mukul Chauhan" id="PLAT-XXXX_add_transactions_table">
        <createTable tableName="transactions">
            <column name="id" type="BINARY(16)">
                <constraints primaryKey="true" nullable="false" primaryKeyName="transactionsPK"/>
            </column>

            <column name="account_id" type="VARCHAR(55)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_type" type="VARCHAR(55)">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>